<?xml version='1.0' encoding='utf-8'?>
<structtemplate id="ThisThreadSleepAdapter" name="ThisThreadSleepAdapter" xmlns="http://jessevdk.github.com/cldoc/1.0">
  <brief>allows for sleeping to an absolute time when the custom clock (EventClockT) has a different offset than the system clock (which is otherwise used for measuring sleep times).</brief>
  <templatetypeparameter id="ThisThreadSleepAdapter::ClockT" name="ClockT">
    <brief>the clock to which absolute times should be compared.</brief>
  </templatetypeparameter>
  <templatetypeparameter id="ThisThreadSleepAdapter::SleepT" name="SleepT">
    <brief>a type or namespace that implements the sleep_for function (like ThisThreadSleepPosix or std::this_thread) which can sleep for a RELATIVE TIME.</brief>
  </templatetypeparameter>
  <methodtemplate id="ThisThreadSleepAdapter::sleep_until" name="sleep_until" static="yes">
    <return>
      <type builtin="yes" name="void" />
    </return>
    <argument id="ThisThreadSleepAdapter::sleep_until::sleep_time" name="sleep_time">
      <type name="std::chrono::time_point&lt;_Clock, _Dur&gt;" qualifier=" const &amp;" />
    </argument>
    <templatetypeparameter id="ThisThreadSleepAdapter::sleep_until::Clock" name="Clock" />
    <templatetypeparameter id="ThisThreadSleepAdapter::sleep_until::Duration" name="Duration" />
  </methodtemplate>
  <methodtemplate id="ThisThreadSleepAdapter::sleep_for" name="sleep_for" static="yes">
    <return>
      <type builtin="yes" name="void" />
    </return>
    <argument id="ThisThreadSleepAdapter::sleep_for::dur" name="dur">
      <type name="std::chrono::duration&lt;_Rep, _Period&gt;" qualifier=" const &amp;" />
    </argument>
    <templatetypeparameter id="ThisThreadSleepAdapter::sleep_for::Rep" name="Rep" />
    <templatetypeparameter id="ThisThreadSleepAdapter::sleep_for::Period" name="Period" />
  </methodtemplate>
</structtemplate>
